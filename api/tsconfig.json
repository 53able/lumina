{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "types": ["node"],
    "paths": {
      "@/*": ["../src/*"]
    }
  },
  "include": ["**/*.ts", "../src/api/**/*.ts", "../src/api/**/*.tsx", "../src/shared/**/*.ts"],
  "exclude": ["**/*.test.ts", "../src/test/**"]
}
