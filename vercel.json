{
  "version": 2,
  "installCommand": "pnpm install",
  "buildCommand": "pnpm build",
  "rewrites": [
    {
      "source": "/((?!assets|api|health|favicon|.*\\.(ico|png|svg|jpg|jpeg|gif|webp|woff|woff2|ttf|eot)).*)",
      "destination": "/api/index.ts"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ]
}
