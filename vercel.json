{
  "buildCommand": "pnpm build",
  "outputDirectory": "dist",
  "functions": {
    "api/index.ts": {
      "includeFiles": "{src/api,src/shared}/**/*.ts"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api"
    },
    {
      "source": "/health",
      "destination": "/api"
    }
  ]
}
